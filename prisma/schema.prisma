generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())

  @@map("users")
}

model Parties {
  id            String          @id @default(uuid())
  name          String
  start         String
  end           String
  created_at    DateTime        @default(now())
  listPromoters ListPromoters[]

  @@map("parties")
}

model ListPromoters {
  id         String   @id @default(uuid())
  id_party   String
  party      Parties  @relation(fields: [id_party], references: [id])
  name       String
  cpfGuest   String
  qtdGuest   Int      @default(0)
  created_at DateTime @default(now())

  @@map("listpromoters")
}
